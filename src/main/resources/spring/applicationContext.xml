<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="
          http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
	<!-- 引入jdbc配置文件 -->
	<context:property-placeholder location="classpath:properties/jdbc_user.properties"/>
	<context:component-scan base-package="com.shiro.service,com.oa"/>
	<import resource="classpath:spring/spring-config-cache.xml"/>
	<import resource="classpath:spring/spring-config-shiro.xml"/>
	<!--数据源-->
	<import resource="classpath:datasource/datasource_user.xml"/>
</beans>  