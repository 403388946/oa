<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.oa.userInfo.mapper.UserMapper">
    <sql id="baseInfo">
        id AS id,
        login_name AS login_name,
        nick_name AS userName,
        name AS realName
    </sql>
    <!--查询用户信息通过userid-->
    <select id="getUserInfoById" resultType="com.oa.userInfo.model.User">
         select <include refid="baseInfo"/>
         from user_account WHERE id = #{id}
    </select>

</mapper>